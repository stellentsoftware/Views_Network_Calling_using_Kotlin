<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".ui.activities.NetworkingView"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/progressBarNetworking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:progress="0"
       android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/ll_response"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:text="IP"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingLeft="40dp"
                android:paddingStart="40dp"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="24dp"
                android:id="@+id/text_ip"
                android:layout_height="50dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
    <TextView
        android:layout_width="match_parent"
        android:text="Latitude"
        android:layout_weight="1"
        android:gravity="start|center"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/text_latitude"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24dp"
        android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
    <TextView
        android:layout_width="match_parent"
        android:text="Longitude"
        android:gravity="start|center"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:layout_weight="1"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/text_longitude"
        android:layout_weight="1"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24dp"
        android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
    <TextView
        android:layout_width="match_parent"
        android:text="Country"
        android:gravity="start|center"
        android:layout_weight="1"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/text_country"
        android:layout_weight="1"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24dp"
        android:layout_height="50dp" />
    </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center"
        android:layout_centerInParent="true"
        android:id="@+id/text_network_error"
        android:visibility="gone"
        android:textColor="@android:color/holo_blue_bright"
        android:text="Please Check Your Internet and Try Again"
        android:layout_height="wrap_content"
        android:textSize="24dp"/>

</RelativeLayout>
